#! /bin/bash

# This script is executed by GNOME as it creates the sesssion for the laptop's screen.
# It is pointed to by ~/.config/autostart/start_server.desktop.

# Kill any existing VNC server first
tigervncserver -kill :2 2>/dev/null || true

# Start VNC server on display :1 (port 590)
tigervncserver :2 -localhost no -geometry 887x637 -depth 16 -xstartup /home/jwd/music_server/start_vnc_session

